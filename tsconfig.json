{
    "include": ["./src/**/*", "./test/**/*", "../fl.ui/src/ui/grid/OrientBox.ts"],
    "exclude": ["./dist/**/*", "./externals/**/*"],
    "compilerOptions": {
        "outDir": "./dist/",
        "paths": {
            "fest-src/*": ["../*"],
            "fest/cdnImport": ["../cdnImport.mjs"],
            "fest/dom": ["./src/index.ts"],
            "fest/lure": ["../lur.e/src/index.ts"],
            "fest/object": ["../object.ts/src/index.ts"],
            "fest/uniform": ["../uniform.ts/src/index.ts"],
            "fest/theme": ["../theme.core/src/index.ts"],
        },
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "WebWorker"],
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "allowArbitraryExtensions": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "noImplicitAny": false,
        "declaration": false,
        "noImplicitThis": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceMap": false,
        "typeRoots": ["plugins/global.d.ts"],
        "experimentalDecorators": true,
    },
}
